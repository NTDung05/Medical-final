<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhap ngay" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_thuoc"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:spinnerMode="dropdown"
            android:text="Moi chọn thuoc" />

        <EditText
            android:id="@+id/edsoluong"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="So luong" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btXacnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Thêm" />

        <Button
            android:id="@+id/btXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btXacnhan"
            android:text="Xóa" />

        <Button
            android:id="@+id/btHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btXoa"
            android:text="Hủy" />
        <Button
            android:id="@+id/btLuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btHuy"
            android:text="Lưu" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvchitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>